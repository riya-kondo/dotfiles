#! /bin/bash

echo -n "Do you setup proxy?[Y/n] "
if read -q; then
    source "${HOME}/dotfiles/proxy_conf"
    export HTTPS_PROXY=$HTTP_PROXY
    export http_proxy=$HTTP_PROXY
    export https_proxy=$HTTP_PROXY
    echo "\nProxy has setup successfully"
else
    export http_proxy=""
    export https_proxy=$http_proxy
    export HTTP_PROXY=$http_proxy
    export HTTPS_PROXY=$http_proxy
    echo "\nProxy settings is removed."
fi

